{
  "name": "@supertokens-plugins/opentelemetry-nodejs",
  "version": "0.1.1",
  "description": "SuperTokens plugin for adding OpenTelemetry logging in your Node.js application.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "lint": "eslint ./src --ext .ts,.tsx,.js,.jsx",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "keywords": [],
  "license": "Apache-2.0",
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/resources": "^2.1.0",
    "@opentelemetry/semantic-conventions": "^1.37.0"
  },
  "peerDependencies": {
    "supertokens-node": ">=23.0.0"
  },
  "devDependencies": {
    "@shared/eslint": "*",
    "@shared/tsconfig": "*",
    "@types/node": "^20.0.0",
    "eslint": "^8.57.0",
    "prettier": "2.0.5",
    "pretty-quick": "^3.1.1",
    "typescript": "^5.7.3",
    "vitest": "^1.3.1"
  },
  "browser": {
    "fs": false
  },
  "publishConfig": {
    "access": "public"
  }
}
