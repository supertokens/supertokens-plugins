{
  "extends": "@shared/tsconfig/react.json",
  "compilerOptions": {
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist",
    "noUnusedLocals": false,
    "noImplicitAny": false
  },
  "include": ["src/**/*"],
  "exclude": [
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.test.ts",
    "src/**/*.spec.ts"
  ]
}
